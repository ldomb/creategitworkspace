[user]
	name = 
	email = 
[init]
	templatedir = ~/.git-templates

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	df = diff
	lg = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
        ign = ls-files -o -i --exclude-standard
[color]
        ui = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan
